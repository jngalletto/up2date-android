<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        style="@style/Base.Wrapper.FullWidth"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:elevation="10dp">

        <LinearLayout
            style="@style/Base.Wrapper"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/newsImage"
                style="@style/Base.Wrapper.FullWidth"
                android:transitionName="@string/news_image_transition_name"
                android:layout_height="@dimen/fixed_size_medium_large_height"
                android:padding="@dimen/small_padding"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/title"
                style="@style/Base.TextView.NewsTitle"
                android:maxLines="2"
                android:padding="10dp"
                android:textIsSelectable="false"
                android:textStyle="bold"
                tools:text="sunt aut facere repellat provident occaecati "
                />

            <TextView
                android:id="@+id/body"
                style="@style/Base.TextView.NewsDescription"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textIsSelectable="false"
                tools:text="quia et suscipit\nsuscipit recusandae consequuntur expedita et cum\nreprehenderit molestiae ut ut quas totam\nnostrum rerum est autem sunt rem eveniet architecto"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
