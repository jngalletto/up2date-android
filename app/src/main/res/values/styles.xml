<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/osloGray</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>
    </style>

    <style name="AppTheme.TransparentTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.MapTheme">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--<style name="AppTheme.SplashTheme" parent="AppTheme.TransparentTheme">-->
        <!--<item name="android:windowBackground">@drawable/background_splash</item>-->
    <!--</style>-->

    <style name="Base" />

    <style name="Base.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Base.ContainerWithoutPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Base.ContainerLeftRightPadded" parent="Base.ContainerWithoutPadding">
        <item name="android:paddingRight">@dimen/medium_padding</item>
        <item name="android:paddingLeft">@dimen/medium_padding</item>
    </style>

    <style name="Base.ContainerFullPadded" parent="Base.ContainerLeftRightPadded">
        <item name="android:paddingTop">@dimen/medium_padding</item>
        <item name="android:paddingBottom">@dimen/medium_padding</item>
    </style>

    <style name="Base.Wrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Base.Wrapper.FullWidth">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Base.Wrapper.FullHeight">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Button" parent="Base.Wrapper.FullWidth">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText" parent="Base.Wrapper.FullWidth">
        <item name="android:textColorHint">@color/osloGray</item>
        <item name="android:textColor">@color/trout</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="backgroundTint">@color/trout</item>
    </style>

    <style name="Base.ContainerWithoutPadding.Scroll">
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="Base.ContainerWithoutPadding.Scroll.White">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="EditText.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditText.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="ProgressBar" parent="Base.Wrapper.FullWidth">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_unit</item>
        <item name="android:background">@color/trout</item>
        <item name="android:alpha">0.1</item>
    </style>

    <style name="Base.Text" parent="Base.Wrapper.FullWidth">
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:paddingEnd">@dimen/dimen_20</item>
        <item name="android:paddingStart">@dimen/dimen_20</item>
    </style>

    <style name="Base.Text.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/trout</item>
    </style>

    <style name="Base.Text.Content">
        <item name="android:textColor">@color/trout</item>
    </style>

    <style name="Base.Text.Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/dimen_zero</item>
        <item name="android:paddingStart">@dimen/dimen_zero</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/dimen_320</item>
    </style>

    <style name="Base.TextView.NewsDescription" parent="Base.Wrapper.FullWidth">
        <item name="android:fontFamily">@font/chakra</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="Base.TextView.NewsTitle" parent="Base.Wrapper.FullWidth">
        <item name="android:fontFamily">@font/monserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
</resources>
